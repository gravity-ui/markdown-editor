{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ESNext"],
    "outDir": "build/esm",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "#core": ["./src/core"],
      "#cm/*": ["./src/cm/*"],
      "#pm/*": ["./src/pm/*"],
      "~playwright/*": ["./playwright/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "demo/**/*", "tests/**/*"],
  "exclude": ["build", "**/__stories__", "**/__tests__"]
}
